<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/old_username_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="Old Username"
        app:layout_constraintBottom_toTopOf="@+id/new_username_edittext_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995" />

    <EditText
        android:id="@+id/new_username_edittext_settings"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext_settings"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectphoto_button_settings"></EditText>

    <TextView
        android:id="@+id/old_iduser_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old ID user"
        app:layout_constraintBottom_toTopOf="@+id/id_user_edittext_settings"
        app:layout_constraintEnd_toEndOf="@+id/new_username_edittext_settings"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="@+id/new_username_edittext_settings"
        app:layout_constraintTop_toBottomOf="@+id/old_username_settings"
        app:layout_constraintVertical_bias="0.918" />

    <EditText
        android:id="@+id/id_user_edittext_settings"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_edittext_settings"
        android:ems="10"
        android:hint="Edit ID user"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@+id/new_username_edittext_settings"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/new_username_edittext_settings"
        app:layout_constraintTop_toBottomOf="@+id/new_username_edittext_settings" />

    <Button
        android:id="@+id/settings_button_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="@+id/id_user_edittext_settings"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_user_edittext_settings"
        app:layout_constraintTop_toBottomOf="@+id/id_user_edittext_settings" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selectphoto_view_settings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/selectphoto_button_settings"
        app:layout_constraintEnd_toEndOf="@+id/selectphoto_button_settings"
        app:layout_constraintStart_toStartOf="@+id/selectphoto_button_settings"
        app:layout_constraintTop_toTopOf="@+id/selectphoto_button_settings" />

    <Button
        android:id="@+id/selectphoto_button_settings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:text="Button"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>